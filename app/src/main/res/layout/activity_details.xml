<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daniel.mygrocerylist.Activities.DetailsActivity">

    <android.support.v7.widget.CardView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <TextView
                android:id="@+id/itemNameDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="text view"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/quantityDetails"
                android:layout_below="@id/itemNameDetails"
                android:text="Qty: "
                android:textStyle="italic"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/dateAddedDetails"
                android:layout_below="@id/quantityDetails"
                android:text="Date"
                android:textSize="14sp"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TableRow
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_alignBottom="@id/dateAddedDetails"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/editButtonDetails"
                    android:background="@android:drawable/ic_menu_edit"
                    android:layout_width="30dp"
                    android:layout_marginEnd="15dp"
                    android:layout_height="30dp"/>
                <Button
                    android:id="@+id/deleteButtonDetails"
                    android:background="@android:drawable/ic_delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>


            </TableRow>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
